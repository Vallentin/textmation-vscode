{
	"name": "textmation-vscode",
	"displayName": "textmation-vscode",
	"description": "Textmation for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "textmation",
				"aliases": ["Textmation"],
				"extensions": [".anim"],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "textmation",
				"scopeName": "source.anim",
				"path": "./syntaxes/textmation.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
